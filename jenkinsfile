pipeline {
    agent any

    tools {
        maven 'Maven' // This should match the name you configured in Global Tool Configuration
    }

    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/suramanjari-kesavan/IGP_1.git'
            }
        }

        stage('Code Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Code Packaging') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'cp /var/lib/jenkins/workspace/$JOB_NAME/target/ABCtechnologies-1.0.war /var/lib/jenkins/workspace/$JOB_NAME/abc.war'
                sh 'docker build -t suramanjarikesavan/abc_tech:$BUILD_NUMBER .'
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'dockerhub', url: '']) {
                        sh 'docker push suramanjarikesavan/abc_tech:$BUILD_NUMBER'
                    }
                }
            }
        }

        stage('Deploy as Container') {
            steps {
                sh 'docker run -itd -P suramanjarikesavan/abc_tech:$BUILD_NUMBER'
            }
        }
    }
}